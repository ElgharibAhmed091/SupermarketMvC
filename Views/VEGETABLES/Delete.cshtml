@model WebApplication1.Models.VEGETABLES

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger">Delete Vegetable</h1>

<div class="container">
    <h3 class="text-warning">Are you sure you want to delete this item?</h3>

    <h4>VEGETABLES</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.img)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.img" alt="Image" style="width: 100px; height: auto;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="btn-group">
            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
            <a class="btn btn-secondary btn-lg" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
