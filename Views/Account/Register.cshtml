@model WebApplication1.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">إنشاء حساب جديد</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="card-title text-primary text-center">تسجيل حساب جديد</h4>
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Email Field -->
                    <div class="form-group mb-4">
                        <label for="Email" class="form-label">البريد الإلكتروني</label>
                        <input asp-for="Email" class="form-control" placeholder="أدخل بريدك الإلكتروني" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-4">
                        <label for="Password" class="form-label">كلمة المرور</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="أدخل كلمة المرور" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-group mb-4">
                        <label for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="أعد إدخال كلمة المرور" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-block">تسجيل</button>
                </form>
            </div>
        </div>
    </div>
</div>

