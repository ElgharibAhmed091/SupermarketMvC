    var isAdmin = User.IsInRole("Admin");
} *@
@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}
@* @if (isAdmin) *@
{
<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-lg p-4">
        <h4 class="card-title text-info">تعديل بيانات المنتج</h4>
        <hr />
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Hidden field for Product Id -->
            <input type="hidden" asp-for="Id" />

            <!-- Product Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">اسم المنتج</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Product Image -->
            <div class="form-group mb-3">
                <label asp-for="img" class="form-label fw-bold">صورة المنتج</label>
                <input asp-for="img" class="form-control" placeholder="أدخل رابط الصورة" />
                <span asp-validation-for="img" class="text-danger"></span>

                @if (!string.IsNullOrEmpty(Model.img))
                {
                    <div class="mt-3">
                        <img src="@Model.img" alt="Product Image" class="img-thumbnail" style="max-height: 150px;" />
                    </div>
                }
                else
                {
                    <span class="text-muted">لا توجد صورة متاحة</span>
                }
            </div>

            <!-- Product Price -->
            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label fw-bold">السعر</label>
                <input asp-for="Price" class="form-control" placeholder="أدخل السعر" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Category Dropdown -->
            <div class="form-group mb-4">
                <label asp-for="CategoryId" class="form-label fw-bold">الفئة</label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success rounded-pill me-3">حفظ</button>
                <a asp-action="Index" class="btn btn-secondary rounded-pill">العودة للقائمة</a>
            </div>
        </form>
    </div>
</div>
}
