@* @{
    var isAdmin = User.IsInRole("Admin");
} *@
@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Delete";
}
@* @if (isAdmin) *@
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body p-4">
                        <h2 class="text-center text-danger mb-4">حذف الفئة</h2>
                        <h5 class="text-center mb-4">هل أنت متأكد أنك تريد حذف هذه الفئة؟</h5>

                        <div class="alert alert-warning text-center">
                            <strong>اسم الفئة:</strong> @Html.DisplayFor(model => model.Name)
                        </div>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CategoryId" />

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger rounded-pill">
                                    حذف
                                </button>
                                <a asp-action="Index" class="btn btn-secondary rounded-pill">
                                    الرجوع إلى القائمة
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}