@model IEnumerable<WebApplication1.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Our Category </h2>
        <a asp-action="Create" class="btn btn-success btn-lg rounded-pill">
            <i class="bi bi-plus-circle"></i>  Add To cart
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm border rounded-3">
            <thead class="table-dark text-center">
                <tr>
                    <th> Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="align-middle text-center">
                                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm me-2">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm" onclick="return confirm('هل أنت متأكد من الحذف؟');">
                                    <i class="bi bi-trash-fill"></i> Remove
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">لا توجد فئات متاحة حاليًا</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
